# API Configuration
REACT_APP_API_URL=http://localhost:5500/api

# Environment
REACT_APP_ENV=development

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=52428800
REACT_APP_ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/quicktime
REACT_APP_ALLOWED_PDF_TYPES=application/pdf
REACT_APP_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Feature Flags
REACT_APP_ENABLE_QUIZZES=true
REACT_APP_ENABLE_FILE_UPLOAD=true
REACT_APP_ENABLE_PROGRESS_TRACKING=true
